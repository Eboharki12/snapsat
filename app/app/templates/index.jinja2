<!DOCTYPE html>
<html>
    <head>
        <meta charset=utf-8 />
        <title>Snapsat</title>
        <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
        <link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/v2.1.5/mapbox.css'>
        <link rel='stylesheet' href='/static/main.css'>
    </head>
    <body>
        <header class='mtx container center align-center'>
            <h1><a href='/'>Landsat.club</a></h1>
        </header>
        <div class='map-container'>
            <div id='map'>
                <span class="reticle bold red h3"><img src='/static/logo.svg'></span>
            </div>
        </div>
        <div class='contentmax'>
                <div>
                    <p class='test_lat'>{{lat}}</p>
                    <p class='test_lng'>{{lng}}</p>

                </div>
                
                <div id='available-scenes' class='display-inline-block'>
                    <h2>Available scenes</h2>
                    {% for s in scenes | sort(reverse=True, attribute='acquisitiondate') %}
                    <h3 class='js-trigger mbn'>{{ s.acquisitiondate }}</h3>
                    <div class='details'>
                        <p>Path: {{ s.path }}</p>
                        <p>Row: {{ s.row }}</p>
                        <p>Cloud coverage: {{ s.cloudcover }}</p>
                        <img src="https://s3-us-west-2.amazonaws.com/landsat-pds/L8/{{'%03d' % s.path}}/{{'%03d' % s.row}}/{{s.entityid}}/{{s.entityid}}_thumb_large.jpg">
                        <form action="/request/{{s.entityid}}" method="post" id="request_form">
                        <div id='combinations' class='display-inline-block'>
                        <h4 class="customband">Select your custom band combinations</h4>
                        <div class="radiobox">
                        <input type="radio" name="band_combo" value="432" checked>
                            <label>Normal Colors: 4, 3, 2</label><br>
                        <input type="radio" name="band_combo" value="543">
                            <label>See the Heat: 5, 4, 3</label><br>
                        <input type="radio" name="band_combo" value="532">
                            <label>Veggie Popping: 5, 3, 2</label><br>
                        </div>
                        </div>    
                        <button form="request_form" formmethod="post" type="submit">
                            Request
                            </button>
                        </form>
                    </div>
                    {% endfor %}
                </div>
        </div>

        <script src='/static/bundle.js'></script>
        <script src='/static/js/gauges.js'></script>
    </body>
</html>
