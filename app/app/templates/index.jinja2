<!DOCTYPE html>
<html>
    <head>
        <meta charset=utf-8 />
        <title>Snapsat</title>
        <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
        <link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/v2.1.5/mapbox.css'>
        <link rel='stylesheet' href='/static/main.css'>
    </head>
    <body>
        <header class='container center'>
            <h1><a href='/'>Landsat.club</a></h1>
        </header>
        <div class='map-container'>
            <div id='map'></div>
        </div>
        <div class='content container center'>
            <ul>
                {% for s in scenes %}
                    <li>{{ s.entityid }}</li>
                    <li><a href='{{ s.download_url }}'>Download</a></li>
                    <button><a href='/scene/{{ s.entityid }}'>Request</a></button>
                    <img src="https://s3-us-west-2.amazonaws.com/landsat-pds/L8/{{'%03d' % s.path}}/{{'%03d' % s.row}}/{{s.entityid}}/{{s.entityid}}_thumb_large.jpg">
                {% endfor %}
            </ul>
        </div>
        <script src='/static/bundle.js'></script>
        <script src='/static/js/gauges.js'></script>
    </body>
</html>
