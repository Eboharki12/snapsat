<!DOCTYPE html>
<html>
    <head>
        <meta charset=utf-8 />
        <title>Snapsat</title>
        <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
        <link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/v2.1.5/mapbox.css'>
        <link rel='stylesheet' href='/static/main.css'>
    </head>
    <body>
        <div class='content'>
            <ul>
                <li id='date'>January 1, 2015</li>
                <li id='b1'>4</li>
                <li id='b2'>3</li>
                <li id='b3'>2</li>
                {% for s in scenes %}
                    <li>{{ s.entityid }}</li>
                    <button><a href='/scene/{{ s.entityid }}'>Request</a></button>
                {% endfor %}
            </ul>
        </div>
        <div class='map-container'>
            <div id='map'></div>
        </div>
        <script src='/static/bundle.js'></script>
        <script src='/static/js/gauges.js'></script>
    </body>
</html>
