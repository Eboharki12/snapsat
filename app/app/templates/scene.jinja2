{% extends "base.jinja2" %}


{% block title %}
  <title>{{ meta_data.scene_id }} | Snapsat</title>
{% endblock %}

{% block content %}

  <!-- Metadata -->
  <div class='container clearfix mt4 p1'>
    <h1 class='center mb3'>An overview of {{ meta_data.scene_id }}</h1>
    {% include 'scene/metadata.html' %}
  </div>


  <!-- View existing composites -->
  {% include 'scene/view.html' %}


  <!-- Create new composites -->
  <div class='container clearfix'>
    <h1 class='center'>Create a new image</h1>
    <div class='sm-col sm-col-6 p1'>
      {% include 'scene/bands.html' %}
    </div>
    <div class='sm-col sm-col-6 p1'>
      {% include 'scene/create.html' %}
    </div>
  </div>
{% endblock %}
