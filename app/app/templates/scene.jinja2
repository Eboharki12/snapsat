{% extends "base.jinja2" %}


{% block title %}
<title>{{ meta_data.scene_id }} | Snapsat</title>
{% endblock %}

{% block content %}

<div class='container clearfix mt4'>

  <div class='center mb4'>
    <h1 class='mb0'>Your selection</h1>
    <p class='h3'>Create image composites of the scene you selected.<sup><a href='#fn:4' id='fnref:4'>&#8505;</a></sup></p>
    <button id='js-map_location' class='button-transparent'>Where is this?</button>
  </div>

  <div class='mb4'>
    <table class='table-light mb4'>
      <thead>
        <tr>
          <th>ID<sup><a href='#fn:7' id='fnref:7'>&#8505;</a></sup></th>
          <th>Time acquired(UTC)</th>
          <th>Cloud cover</th>
          <th>Boundaries <span class='regular ml1'>Min Lat/Min Lon,  Max Lat/Max Lon</span></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{ meta_data.scene_id }}</td>
          <td>{{ meta_data.acquisitiondate }}</td>
          <td>{{ meta_data.cloudcover }}%</td>
          <td>
            {{ meta_data.min_lat }}/
            {{ meta_data.min_lon }},
            {{ meta_data.max_lat }}/
            {{ meta_data.max_lon }}
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class='col-8 mx-auto center'>
    {% include 'includes/create-preview.html' %}
  </div>

</div> <!-- Container -->

{% include 'includes/view-previews.html' %}
{% include 'includes/footnotes_scene.html' %}

{% endblock %}
